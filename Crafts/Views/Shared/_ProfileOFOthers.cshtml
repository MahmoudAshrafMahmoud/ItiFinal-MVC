    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Assests/js/jquery-3.2.1.min.js"></script>
    <script src="~/Assests/js/popper.js"></script>
    <script src="~/Assests/js/bootstrap.min.js"></script>
    <script src="~/Assests/js/stellar.js"></script>
    <script src="~/Assests/vendors/lightbox/simpleLightbox.min.js"></script>
    <script src="~/Assests/vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/Assests/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="~/Assests/vendors/isotope/isotope-min.js"></script>
    <script src="~/Assests/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/Assests/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Assests/js/mail-script.js"></script>
    <script src="~/Assests/js/theme.js"></script>
    @RenderSection("scripts", required: false)

    <script type="text/javascript">

        if ('@Session["User_Id"]' == "") {
            document.getElementById("LoginID").classList.remove("hide")
            document.getElementById("RegisterID").classList.remove("hide")
            document.getElementById("ProfileID").classList.add("hide")
            document.getElementById("VendorID").classList.add("hide")

        }
        else {

            document.getElementById("LoginID").classList.add("hide")
            document.getElementById("RegisterID").classList.add("hide")
            document.getElementById("ProfileID").classList.remove("hide")
            document.getElementById("VendorID").classList.remove("hide")

        }

    </script>

</body>

</html>
