<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="icon" href="~/Assests/img/favicon.png" type="image/png">
    <title>Handmade Crafts</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Assests/css/bootstrap.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <link rel="stylesheet" href="~/Assests/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/Assests/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Assests/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Assests/vendors/lightbox/simpleLightbox.css">
    <link rel="stylesheet" href="~/Assests/vendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="~/Assests/vendors/animate-css/animate.css">
    <!-- main css -->
    <link rel="stylesheet" href="~/Assests/css/style.css">
    <link rel="stylesheet" href="~/Assests/css/responsive.css">
    <link rel="stylesheet" href="~/Assests/css/multiItemSlider.css">

</head>

<body>

    <!--================Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" href="index.html">
                        <img src="~/Assests/img/logo.png" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>

                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <div class="row w-100">
                            <div class="col-lg-7 pr-0" style="padding-right: 0px;">
                                <ul class="nav navbar-nav center_nav pull-right">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("Index","Home")">Home</a>
                                    </li>
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("About","Home")">About</a>
                                    </li>
                                    <li class="nav-item submenu dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
                                        <ul class="dropdown-menu text">

                                            @{Html.RenderAction("showCategories", "Category");}

                                        </ul>
                                    </li>




                                    <li class="nav-item submenu dropdown" id="VendorID">
                                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Manage My sells</a>
                                        <ul class="dropdown-menu">
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Addpost","Vendor")">Add Post</a>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("VendorOrders","Vendor")">Vendor Orders</a>
                                            <li class="nav-item">
                                                <a class="nav-link" href="@Url.Action("Search","Vendor")">Search</a>
                                            </li>
                                        </ul>
                                    </li>
                                    <li class="nav-item active " id="LoginID">
                                        <a class="nav-link" href="@Url.Action("Login","User")">Login</a>
                                    </li>
                                    <li class="nav-item active notuser" id="RegisterID">
                                        <a class="nav-link" href="@Url.Action("Register","User")">Register</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("contact","User")">Contact</a>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-lg-5">
                                <ul class="nav navbar-nav navbar-right right_nav pull-right">
                                    <hr>


                                    <li class="nav-item">
                                        <a href="@Url.Action("myprofile","User")" class="icons">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                        </a>
                                    </li>

                                    <hr>

                                    @*<li class="nav-item">
                                            <a href="#" class="icons">
                                                <i class="far fa-heart" aria-hidden="true"></i>
                                            </a>
                                        </li>*@

                                    <hr>

                                    <li class="nav-item">
                                        <a href="@Url.Action("cartDisplay","Cart")" class="icons">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <a href="@Url.Action("cartDisplay","Cart")">
                                        <span id="shoppingCartID" class="font-weight-bold pr-4 mt-3 nav-link">
                                            @Session["count"]  <br />
                                            @Session["TotalPrice"] L.E
                                        </span>
                                    </a>

                                    <li class="nav-item" id="ProfileID">
                                        <a href="@Url.Action("Logout","User")" class="icons">
                                            <i class="fas fa-sign-out-alt"></i>
                                        </a>
                                    </li>

                                    <hr>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>


    <!--================Header Menu Area =================-->
    <!--================Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-center">

                    <!-- cover image -->
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <!--================Blog Area =================-->
    <section class="blog_area single-post-area p_120">
        <div class="container">
            <div class="row">

             
               
                    @RenderBody()
                
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->
