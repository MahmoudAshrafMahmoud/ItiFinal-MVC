    <!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Handmade Crafts</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/Assests/css/bootstrap.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <link rel="stylesheet" href="~/Assests/vendors/linericon/style.css">
    <link rel="stylesheet" href="~/Assests/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Assests/vendors/owl-carousel/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Assests/vendors/lightbox/simpleLightbox.css">
    <link rel="stylesheet" href="~/Assests/vendors/nice-select/css/nice-select.css">
    <link rel="stylesheet" href="~/Assests/vendors/animate-css/animate.css">
    <!-- main css -->
    <link rel="stylesheet" href="~/Assests/css/style.css">
    <link rel="stylesheet" href="~/Assests/css/responsive.css">
</head>

<body>

    <!--================Header Menu Area =================-->
    <header class="header_area">
        <div class="main_menu">
            <nav class="navbar navbar-expand-lg navbar-light">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <a class="navbar-brand logo_h" href="@Url.Action("Home","User")">
                        <img src="~/Assests/img/logo.png" alt="">
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                        <div class="row w-100">
                            <div class="col-lg-7 pr-0">
                                <ul class="nav navbar-nav center_nav pull-right">
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("Home","User")">Home</a>
                                    </li>
                                    <li class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("about","Home")">About</a>
                                    </li>
                                    <li class="nav-item submenu dropdown">
                                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Categories</a>
                                        <ul class="dropdown-menu">

                                            @{Html.RenderAction("showCategories", "Category");}

                                        </ul>
                                    </li>

                                    <li id="VendorID" class="nav-item active">
                                        <a class="nav-link" href="@Url.Action("Addpost","Vendor")">Manage My sells</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link" href="@Url.Action("contact","User")">Contact</a>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-lg-5">
                                <ul class="nav navbar-nav navbar-right right_nav pull-right">
                                    <hr>
                            

                                    <li class="nav-item" >
                                        <a href="@Url.Action("myprofile","User")" class="icons">
                                            <i class="fa fa-user" aria-hidden="true"></i>
                                        </a>
                                    </li>

                                    <hr>

                                    <li class="nav-item">
                                        <a href="@Url.Action("cartDisplay","Cart")" class="icons">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <a href="@Url.Action("cartDisplay","Cart")">
                                        <span id="shoppingCartID" class="font-weight-bold pr-4 mt-3 nav-link">
                                            @Session["count"]  <br />
                                            @Session["TotalPrice"] L.E
                                        </span>
                                    </a>

                                    <li class="nav-item" id="ProfileID">
                                        <a href="@Url.Action("Logout","User")" class="icons">
                                            <i class="fas fa-sign-out-alt"></i>
                                        </a>
                                    </li>

                                    <hr>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <!--================Header Menu Area =================-->
    <!--================Home Banner Area =================-->
    <section class="banner_area mt-5 pt-5">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-center">

                    <!-- cover image -->
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <!--================Blog Area =================-->
    <section class="blog_area single-post-area p_120">
        <div class="container m-1 col-12">
            <div class="row">

                <div class="col-lg-3">
                    <div class="blog_right_sidebar">
           


                        <aside class="single_sidebar_widget author_widget">
                            <img class="mt-5 author_img rounded-circle"
                                 src="@Session["ProfilePicture"]" width="150px;" alt="">
                            <h4> @Session["UserFullname"] </h4>
                            <div class="social_icon">
                                <a href="#">
                                    <i class="fa fa-facebook"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-twitter"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-github"></i>
                                </a>
                                <a href="#">
                                    <i class="fa fa-behance"></i>
                                </a>
                            </div>
                            <p>
                                @Session["Bio"]
                            </p>
                            <div class="br"></div>
                        </aside>
                        <aside class="single_sidebar_widget ads_widget">
                            <a href="#">
                                <img class="img-fluid" src="" alt="">
                            </a>
                            <div class="br"></div>
                        </aside>
                       

                        @{Html.RenderAction("mycategories", "User");}

                        @{Html.RenderAction("mysubvendors", "User");}


                    </div>
                </div>
                <div class="col-lg-9 posts-list">
                    @RenderBody()
                </div>
            </div>
        </div>
    </section>
    <!--================Blog Area =================-->
    <!--================ start footer Area  =================-->
    <footer class="footer-area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">About Us</h6>
                        <p class="col-12">
                            The Big Oxmox advised her not to do so, because there were thousands of bad Commas, wild Question Marks and devious Semikoli, but the Little Blind Text didn’t listen. 
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget instafeed">
                        <h6 class="footer_title">Instagram Feed</h6>
                        <ul class="list instafeed d-flex flex-wrap">
                            <li>
                                <img src="~/Assests/img/instagram/Image-01.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-02.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-03.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-04.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-05.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-06.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-07.jpg" alt="">
                            </li>
                            <li>
                                <img src="~/Assests/img/instagram/Image-08.jpg" alt="">
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 col-sm-6">
                    <div class="single-footer-widget f_social_wd">
                        <h6 class="footer_title">Follow Us</h6>
                        <p>Let us be social</p>
                        <div class="f_social">
                            <a href="#">
                                <i class="fa fa-facebook"></i>
                            </a>
                            <a href="#">
                                <i class="fa fa-twitter"></i>
                            </a>
                            <a href="#">
                                <i class="fa fa-dribbble"></i>
                            </a>
                            <a href="#">
                                <i class="fa fa-behance"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row footer-bottom d-flex justify-content-between align-items-center">
                <p class="col-lg-12 footer-text text-center">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </p>
            </div>
        </div>
    </footer>
    <!--================ End footer Area  =================-->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/Assests/js/jquery-3.2.1.min.js"></script>
    <script src="~/Assests/js/popper.js"></script>
    <script src="~/Assests/js/bootstrap.min.js"></script>
    <script src="~/Assests/js/stellar.js"></script>
    <script src="~/Assests/vendors/lightbox/simpleLightbox.min.js"></script>
    <script src="~/Assests/vendors/nice-select/js/jquery.nice-select.min.js"></script>
    <script src="~/Assests/vendors/isotope/imagesloaded.pkgd.min.js"></script>
    <script src="~/Assests/vendors/isotope/isotope-min.js"></script>
    <script src="~/Assests/vendors/owl-carousel/owl.carousel.min.js"></script>
    <script src="~/Assests/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Assests/js/mail-script.js"></script>
    <script src="~/Assests/js/theme.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Assests/js/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Assests/js/adminlte.min.js"></script>

    @RenderSection("scripts", required: false)
    <script type="text/javascript">
             if ('@Session["vendor"]' != "vendor") {

            document.getElementById("VendorID").classList.add("hide")

        }
        if ('@Session["User_Id"]' == "") {
                 document.getElementById("LoginID").classList.remove("hide");
                 document.getElementById("RegisterID").classList.remove("hide");
                 document.getElementById("ProfileID").classList.add("hide");
             }
             else {

                 document.getElementById("LoginID").classList.add("hide");
                 document.getElementById("RegisterID").classList.add("hide");
                 document.getElementById("ProfileID").classList.remove("hide");
             }


    </script>


</body>

</html>
