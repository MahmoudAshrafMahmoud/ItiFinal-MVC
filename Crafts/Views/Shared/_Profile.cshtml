                                        </a>
                                    </li>

                                    <hr>

                                    <li class="nav-item">
                                        <a href="#" class="icons">
                                            <i class="fa fa-heart-o" aria-hidden="true"></i>
                                        </a>
                                    </li>

                                    <hr>
                                    <li class="nav-item">
                                        <a href="@Url.Action("cartDisplay","Cart")" class="icons">
                                            <i class="fas fa-shopping-cart"></i>
                                        </a>
                                    </li>
                                    <a href="@Url.Action("cartDisplay","Cart")">
                                        <span id="shoppingCartID" class="font-weight-bold pr-4 mt-3 nav-link">
                                            @Session["count"]  <br />
                                            @Session["TotalPrice"] L.E
                                        </span>
                                    </a>

                                    <hr>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
