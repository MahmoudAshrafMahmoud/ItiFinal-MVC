    <!--================Single Product Area =================-->

    @foreach (var item in Model)
    {

    <div class="product_image_area">
        <div class="container">
            <div class="row s_product_inner">
                <div class="col-lg-6">
                    <div class="s_product_img">
                        @{ var base64 = Convert.ToBase64String(@item.Image);
                           var ImgSRC = string.Format("data:image/gif;base64,{0}", base64);
                        }
                        <img class="d-block w-100" src="@ImgSRC" alt="First slide">
                    </div>
                </div>
                <div class="col-lg-5 offset-lg-1">


                    <div class="s_product_text">
                        <h3>@item.Product_Name</h3>
                        <h2>@item.Product_Price L.E</h2>
                        <ul class="list">
                            <li>
                                <a class="active" href="@Url.Action("SelectedCategory", "Category",new {id= @item.CatID})">
                                    <span>Category</span> : @item.CatName
                                </a>
                            </li>
                            <li>
                                    <span>Availibility</span> : In Stock
                            </li>
                            <li>
                                <a  class="active" href="@Url.Action("SelectedUser", "User",new {id= @item.VendorID})">
                                    <span>Sold By</span> : @item.VendorName
                                </a>
                            </li>
                        </ul>

                        <p>@item.Product_Description</p>


                        <div class="card_area">

                            @Ajax.ActionLink(" ", "Add", "Cart", new { ID = @item.Product_Id },
                                   new AjaxOptions
                                   {
                                       UpdateTargetId = "shoppingCartID",
                                       InsertionMode = InsertionMode.Replace,
                                       HttpMethod = "GET"
                                   },
                                   new { @class = "fas fa-cart-plus font-size30" })                        


                            <a class="icon_btn" href="#">
                                <i class="lnr lnr lnr-heart font-size30"></i>
                            </a>
                        </div>
                    </div>


                </div>
            </div>

            </div>
        </div>
  


    }





