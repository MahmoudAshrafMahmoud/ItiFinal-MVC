
@{
    ViewBag.Title = "cartDisplay";
    Layout = "~/Views/Shared/_Main.cshtml";
}





    <!--================Home Banner Area =================-->
    <section class="banner_area">
        <div class="banner_inner d-flex align-items-center">
            <div class="container">
                <div class="banner_content text-center">
                    <h2>Shopping Cart</h2>
                    <div class="page_link">
                        <a href="index.html">Home</a>
                        <a href="cart.html">Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!--================End Home Banner Area =================-->
    <!--================Cart Area =================-->
    <section class="cart_area">
        <div class="container">
            <div class="cart_inner">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Product</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                      @foreach (var item in ViewBag.CartItems) {
                          var base64 = Convert.ToBase64String(@item.ProductData.Image);
                          var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                            <tr>
                                <td class="w-50">
                                    <div class="media">
                                        <div class="col-3 d-flex">
                                            <img class="col-12 h-25" src="@imgSrc" alt="">
                                        </div>
                                        <div class="media-body">
                                            <p>@item.ProductData.Product_Name</p>
                                        </div>
                                    </div>
                                </td>
                           
                                <section id="pricediv">
                                    <td>


                                        <div class="product_count">
                                            <input type="text" name="qty" id="T_@item.ProductData.Product_Id" maxlength="12" value="1" title="Quantity:" class="input-text qty">
                                            <button onclick="var result = document.getElementById('T_@item.ProductData.Product_Id'); var T_@item.ProductData.Product_Id = result.value; if( !isNaN( T_@item.ProductData.Product_Id )) result.value++;return false;"
                                                    class="increase items-count" type="button">
                                                <i class="fas fa-plus"></i>
                                            </button>
                                            <button onclick="var result = document.getElementById('T_@item.ProductData.Product_Id'); var T_@item.ProductData.Product_Id = result.value; if( !isNaN( T_@item.ProductData.Product_Id ) &amp;&amp; T_@item.ProductData.Product_Id > 0 ) result.value--;return false;"
                                                    class="reduced items-count" type="button">
                                                <i class="fas fa-minus"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <h5>@item.ProductData.Product_Price L.E</h5>
                                    </td>
                                </section>
                                <td style="width: 10%;" >
                                    <h5> @item.ProductTotalPrice L.E </h5>
                                </td>
                                <td></td>

                            </tr>
                            }
                     
                            <tr class="bottom_button">    
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>

                   
                            </tr>
                            <tr>
                                <td></td>
                                <td>
                                    <h5>Subtotal</h5>
                                </td>
                                <td>
                                    <h5> @ViewBag.cart.OrderTotalPrice L.E</h5>
                                </td>
                                <td></td>

                            </tr>
                      
                   
                            <tr class="out_button_area">
                                <td></td>
                                <td></td>
                                <td></td>
                                <td>

                                   
                                        @*<button class="main_btn">Proceed to checkout </button>*@
                                    <form method="post" action="checkout">
                                        <div class="modal fade" id="modalRegisterForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
                                             aria-hidden="true">
                                            <div class="modal-dialog" role="document">
                                                <div class="modal-content">
                                                    <div class="modal-header text-center">
                                                        <h4 class="modal-title w-100 font-weight-bold">Shopping Details</h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                            <span aria-hidden="true">&times;</span>
                                                        </button>
                                                    </div>
                                                    <div class="modal-body mx-3">
                                                        <div class="md-form mb-5">
                                                            <i class="fas fa-phone prefix grey-text text-info font-weight-bold"></i>
                                                            <label  class="ml-2 text-info" data-error="wrong" data-success="right" for="orangeForm-phone">Delivery Phone</label>
                                                            <input name="Phone" id="orangeForm-phone" class=" border-info form-control validate" required>
                                                        </div>

                                                        <div class="md-form mb-4">
                                                            <i class="fas fa-map-marker-alt prefix grey-text text-info font-weight-bold" "></i>
                                                            <label class="ml-2 text-info" data-error="wrong" data-success="right" for="orangeForm-address">Delivery Address</label>
                                                            <input name="address" type="text" id="orangeForm-address" class="border-info form-control validate" required>
                                                        </div>

                                                    </div>
                                                    <div class="modal-footer d-flex justify-content-center">
                                                        <button class="main_btn btn">Checkout</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                        <div class="text-center">
                                            <div class="checkout_btn_inner">
                                                <a class="gray_btn ml-4" href="#">Continue Shopping</a>
                                                <a href="" class="btn btn-primary btn-rounded ml-4 " data-toggle="modal" data-target="#modalRegisterForm">
                                                    Proceed to checkout
                                                </a>
                                            </div>
                                    </div>


                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>


    <!--================End Cart Area =================-->

