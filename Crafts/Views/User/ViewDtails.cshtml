
@model List<BL.SharedModels.MyOrdersModel>

<div id="div1" class="mb-5 pb-5">

    <h4 class="d-block mx-auto mb-4 mt-3 ">
        @Ajax.ActionLink("Back to my orders List", "Show_Orders", "User",
                       new AjaxOptions { UpdateTargetId = "div1", HttpMethod = "GET" })

    </h4>
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Product Price</th>
                <th>Status</th>
            </tr>

        </thead>

        <tbody style="color: #212529;">

            @foreach (var item in Model)
            {
                <tr>

                    <td>@item.ProductName</td>

                    <td>@item.Quantity</td>

                    <td>@item.Productprice</td>

                    <td>@item.Status</td>

                </tr>
            }

        </tbody>



    </table>
</div>